<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visit_tree" model="ir.ui.view">
        <field name="name">visit.log.tree</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="salesman_id"/>
                <field name="customer_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_visit_form" model="ir.ui.view">
        <field name="name">visit.log.form</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="salesman_id"/>
                        <field name="customer_id"/>
                        <field name="date"/>
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_visit_logs" model="ir.actions.act_window">
        <field name="name">سجل الزيارات</field>
        <field name="res_model">salesman.visit.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
