<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_weekly_route_tree" model="ir.ui.view">
        <field name="name">weekly.route.tree</field>
        <field name="model">salesman.weekly.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="salesman_id"/>
            </tree>
        </field>
    </record>

    <record id="view_weekly_route_form" model="ir.ui.view">
        <field name="name">weekly.route.form</field>
        <field name="model">salesman.weekly.route</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="salesman_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <notebook>
                        <page string="خط السير الأسبوعي">
                            <field name="day_lines">
                                <tree editable="bottom">
                                    <field name="day_of_week" widget="selection"/>
                                    <field name="location_lines" widget="one2many_list">
                                        <tree editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="location_type"/>
                                            <field name="predefined_route_id" attrs="{'invisible': [('location_type','!=','route')]}"/>
                                            <field name="area_type" attrs="{'invisible': [('location_type','!=','area')]}"/>
                                            <field name="area_value" attrs="{'invisible': [('location_type','!=','area')]}"/>
                                            <field name="customer_ids" widget="many2many_tags"/>
                                        </tree>
                                    </field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_weekly_route" model="ir.actions.act_window">
        <field name="name">خط السير الأسبوعي</field>
        <field name="res_model">salesman.weekly.route</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
