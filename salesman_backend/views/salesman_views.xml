<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salesman_tree" model="ir.ui.view">
        <field name="name">salesman.profile.tree</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mobile"/>
            </tree>
        </field>
    </record>

    <record id="view_salesman_form" model="ir.ui.view">
        <field name="name">salesman.profile.form</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mobile"/>
                    </group>
                    <notebook>
                        <page string="العملاء">
                            <field name="customer_ids" mode="kanban">
                                <tree>
                                    <field name="name"/>
                                    <field name="city"/>
                                    <field name="street"/>
                                </tree>
                            </field>
                        </page>
                        <page string="الدفعات">
                            <field name="payment_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_salesman" model="ir.actions.act_window">
        <field name="name">المندوبون</field>
        <field name="res_model">salesman.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
