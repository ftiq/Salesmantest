<?xml version="1.0"?>
<odoo>
    <!-- قواعد الوصول حسب المجموعات -->
    <record id="salesman_group" model="res.groups">
        <field name="name">مدير المناديب</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <record id="salesman_rule" model="ir.rule">
        <field name="name">صلاحيات المندوب</field>
        <field name="model_id" ref="model_salesman_profile"/>
        <field name="groups" eval="[(4, ref('salesman_backend.salesman_group'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</odoo>
